<div class="container">
    <div class="main-div-createsnippet">
        <div class="panel">
            <h2>Create a diagram</h2>
            <p>Please enter the title of your diagram followed by the code.</p>

            <form action="/diagram/create" method="post">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <div class="form-group">
                    <input type="text" name="title" placeholder="Untitled">
                </div>
                <div class="form-group">
                    <textarea class="textArea textarea-code" name="code"></textarea>
                    <button type="button" class="drawBtn">Draw</button>
                </div>
                <div>
                    <canvas class="myCanvas" width="1920" height="1080"></canvas>
                </div>
                <input class="btn btn-primary" type="submit" value="Create Diagram">
            </form>
        </div>
    </div>
</div>